{
  "schemas": [
    "json-schema/draft-07"
  ],
  "groups": {
    "schemagroups": {
      "singular": "schemagroup",
      "plural": "schemagroups",

      "attributes": {
        "*": {
          "name": "*",
          "type": "any"
        }
      },

      "resources": {
        "schemas": {
          "singular": "schema",
          "plural": "schemas",

          "attributes": {
            "compatibility": {
              "name": "compatibility",
              "type": "string",
              "enum": [ "none", "backward", "backward_transitive", "forward",
                        "forward_transitive", "full", "full_transitive" ],
              "default": "backwards",
              "location": "resource"
            },
            "validation": {
              "name": "validation",
              "type": "boolean",
              "description": "Verify compliance with specified schema 'format'",
              "location": "resource"
            },
            "format": {
              "name": "format",
              "type": "string",
              "description": "Schema format identifier for this schema version"
            },
            "*": {
              "name": "*",
              "type": "any"
            }
          }
        }
      }
    }
  }
}
